<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_theme_background"
    tools:context=".activities.BrowseCourseActivity">


    <ImageView
        android:id="@+id/img_view_python"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_python" />


    <ScrollView
        android:id="@+id/scroll_python_description"
        android:layout_width="221dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_view_python"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_view_python"
        app:layout_constraintTop_toTopOf="@+id/img_view_python">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inconsolata"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Description..." />

    </ScrollView>

    <ImageView
        android:id="@+id/img_view_java"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/img_view_python"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_view_python"
        app:layout_constraintTop_toBottomOf="@+id/img_view_python"
        app:srcCompat="@drawable/ic_java" />

    <ScrollView
        android:id="@+id/scroll_java_description"
        android:layout_width="221dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_view_java"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/img_view_java"
        app:layout_constraintTop_toTopOf="@+id/img_view_java"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inconsolata"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Description..." />

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="284dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="221dp" />

    <ImageView
        android:id="@+id/img_view_cpp"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_cpp"
        app:layout_constraintEnd_toEndOf="@+id/img_view_java"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_view_java"
        app:layout_constraintTop_toBottomOf="@+id/img_view_java" />

    <ScrollView
        android:id="@+id/scroll_cpp_description"
        android:layout_width="221dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_view_cpp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_view_cpp"
        app:layout_constraintTop_toTopOf="@+id/img_view_cpp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inconsolata"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Description..." />

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="354dp" />
</androidx.constraintlayout.widget.ConstraintLayout>